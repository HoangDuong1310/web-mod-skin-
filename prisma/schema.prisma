// Free Key Sessions - Theo dõi phiên lấy key miễn phí
model FreeKeySession {
  id        String  @id @default(cuid())
  token     String  @unique // Unique token for verification
  callbackSecret String? // Secret for callback verification (prevents bypass)
  productId String
  userId    String? // Optional: logged in user
  ipAddress String
  userAgent String?

  status FreeKeyStatus @default(PENDING)

  // Generated key (after completion)
  licenseKeyId String?     @unique
  licenseKey   LicenseKey? @relation(fields: [licenseKeyId], references: [id])

  createdAt   DateTime  @default(now())
  completedAt DateTime?
  claimedAt   DateTime?
  expiresAt   DateTime // Session expires after 30 minutes

  product Product @relation(fields: [productId], references: [id])
  user    User?   @relation(fields: [userId], references: [id])

  @@index([token])
  @@index([productId])
  @@index([userId])
  @@index([ipAddress])
  @@index([status])
  @@index([createdAt])
  @@map("free_key_sessions")
}

enum FreeKeyStatus {
  PENDING // Waiting for ad bypass
  COMPLETED // Ad bypass completed, ready to claim
  CLAIMED // Key has been claimed
  EXPIRED // Session expired
}
